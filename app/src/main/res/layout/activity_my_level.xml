<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.future.association.personal.ui.activity.MyLevelActivity">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f8f8f8"
            android:fitsSystemWindows="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDengji"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_small_15"
                    android:src="@drawable/ic_dengji" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/padding_small_15"
                    android:paddingTop="@dimen/padding_small_15">

                    <TextView
                        android:id="@+id/tvMyLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前等级:"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_normal_16" />

                    <TextView
                        android:id="@+id/tvMyChenghao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_lsmall_10"
                        android:text="称号:"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_normal_16" />

                    <TextView
                        android:id="@+id/tvMyLevelOth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_lsmall_10"
                        android:text="积分:"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_normal_16" />

                    <TextView
                        android:id="@+id/tvMyDiffNextLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_lsmall_10"
                        android:text="距离下一等级还需要XXX积分"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_normal_16" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small_15"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_small_15"
                android:paddingRight="@dimen/padding_small_15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/divider_left_line"
                    android:drawablePadding="@dimen/five"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_small_15"
                    android:paddingTop="@dimen/padding_small_15"
                    android:text="积分获取"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_big_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_05"
                    android:background="@color/color_dcdcdc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="操作" />

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="积分" />

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_05"
                    android:background="@color/color_dcdcdc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="回帖"
                        android:textColor="@color/color_333333" />

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                    <TextView
                        android:id="@+id/tvMyOrg1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:digits="+-0123456789"
                        android:gravity="center"
                        android:text="+5"
                        android:textColor="@android:color/holo_orange_dark" />

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_05"
                    android:background="@color/color_dcdcdc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="发帖"
                        android:textColor="@color/color_333333" />

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                    <TextView
                        android:id="@+id/tvMyOrg2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:digits="+-0123456789"
                        android:gravity="center"
                        android:text="+4"
                        android:textColor="@android:color/holo_orange_dark" />

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_05"
                    android:background="@color/color_dcdcdc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small_15"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_small_15"
                android:paddingRight="@dimen/padding_small_15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/divider_left_line"
                    android:drawablePadding="@dimen/five"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_small_15"
                    android:paddingTop="@dimen/padding_small_15"
                    android:text="志愿者等级"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_big_18" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_05"
                    android:background="@color/color_dcdcdc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="等级" />

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="称号" />

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="积分" />

                    <View
                        android:layout_width="@dimen/divider_line_05"
                        android:layout_height="match_parent"
                        android:background="@color/color_dcdcdc" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_05"
                    android:background="@color/color_dcdcdc" />

                <ListView
                    android:id="@+id/lvMyZY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/color_dcdcdc"
                    android:dividerHeight="@dimen/divider_line_05"
                    android:scrollbars="none"></ListView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line_05"
                    android:background="@color/color_dcdcdc" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>