<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.future.association.personal.MyMoreActivity">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:id="@+id/myChangePwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改登录密码"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_normal_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_05"
        android:layout_marginLeft="@dimen/margin_small_15"
        android:layout_marginRight="@dimen/margin_small_15"
        android:background="@color/color_dcdcdc" />

    <RelativeLayout
        android:id="@+id/myAboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于我们"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_normal_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_05"
        android:layout_marginLeft="@dimen/margin_small_15"
        android:layout_marginRight="@dimen/margin_small_15"
        android:background="@color/color_dcdcdc" />

    <RelativeLayout
        android:id="@+id/myGiveUsPingJia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="给我们评价"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_normal_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_05"
        android:layout_marginLeft="@dimen/margin_small_15"
        android:layout_marginRight="@dimen/margin_small_15"
        android:background="@color/color_dcdcdc" />

    <RelativeLayout
        android:id="@+id/myVerifyUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检查更新"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_normal_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_05"
        android:layout_marginLeft="@dimen/margin_small_15"
        android:layout_marginRight="@dimen/margin_small_15"
        android:background="@color/color_dcdcdc" />

    <RelativeLayout
        android:id="@+id/myClearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_normal_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_05"
        android:layout_marginLeft="@dimen/margin_small_15"
        android:layout_marginRight="@dimen/margin_small_15"
        android:background="@color/color_dcdcdc" />

    <Button
        android:id="@+id/mySafeExit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_hight_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_small_15"
        android:layout_marginRight="@dimen/margin_small_15"
        android:layout_marginTop="@dimen/thirtyFive"
        android:background="@drawable/shape_more"
        android:text="安全退出"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal_16" />
</LinearLayout>
