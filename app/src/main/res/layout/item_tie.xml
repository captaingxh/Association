<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="tieInfo"
            type="com.future.association.community.model.TieInfo"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="20px"
        android:background="@color/white"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:id="@+id/up_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/head_img"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:minWidth="30dp"
                android:layout_height="wrap_content"
                android:text="@{tieInfo.real_name}"/>
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:background="#E55902"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="@{tieInfo.user_type.equals('1')?@string/xfz:@string/zyz}"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/yanjing"
                    android:drawablePadding="6dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:text="@{tieInfo.click_num}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/pinlun"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:drawablePadding="6dp"
                    android:text="@{tieInfo.getReplyFormat()}"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/up_ll"
            android:layout_toEndOf="@id/head_img"
            android:id="@+id/tv_date"
            android:layout_marginTop="20px"
            android:textColor="#999999"
            android:textSize="24px"
            android:drawableStart="@drawable/time_pic"
            android:text="@{tieInfo.create_time}"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:id="@+id/tv_content"
            android:layout_toEndOf="@id/head_img"
            android:layout_below="@id/tv_date"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="20px"
            android:textSize="30px"
            android:text="@{tieInfo.title}"
            />
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/tv_content"-->
            <!--android:layout_toRightOf="@id/tv_date"-->
            <!--android:layout_marginLeft="30px"-->
            <!--android:layout_marginTop="20px"-->
            <!--android:textColor="#999999"-->
            <!--android:textSize="24px"-->
            <!--android:text="@{tieInfo.getReplyFormat()}"-->
            <!--/>-->
        <TextView
            android:layout_width="80px"
            android:layout_height="36px"
            android:gravity="center"
            android:layout_marginTop="20px"
            android:textColor="#e01a00"
            android:textSize="24px"
            android:visibility="@{tieInfo.isTop()?View.VISIBLE:View.GONE}"
            android:layout_below="@id/up_ll"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_top"
            android:text="置顶"
            />
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="30px"-->
            <!--android:layout_below="@id/tv_date"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:src="@drawable/shape_recycle_item_divider"-->
            <!--/>-->
    </RelativeLayout>

</layout>