<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="detailInfo"
            type="com.future.association.community.model.MsgDetailInfo"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="30px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="20px"
                android:id="@+id/tv_title"
                android:textSize="30px"
                android:textColor="#333333"
                android:text="@{detailInfo.title}"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="20px"
                android:id="@+id/tv_date"
                android:textColor="#999999"
                android:text="@{detailInfo.create_time}"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:layout_below="@id/tv_title"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20px"
                android:textColor="#999999"
                android:text="@{detailInfo.from}"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28px"
                android:textColor="#666666"
                android:layout_below="@id/tv_date"
                android:layout_marginTop="34px"
                android:lineSpacingExtra="20px"
                android:text="@{detailInfo.content}"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="#f8f8f8"/>
    </LinearLayout>

</layout>