<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small_15">

        <ImageView
            android:id="@+id/img_myJD"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_myJD_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mystr1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_normal_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_myJD_createtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mystr2"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_lsmall_12" />

                <TextView
                    android:id="@+id/tv_myJD_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small_15"
                    android:text="@string/mystr3"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_lsmall_12" />

                <TextView
                    android:id="@+id/tv_myJD_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small_15"
                    android:text="@string/mystr4"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_lsmall_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_myJD_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_small_15"
        android:paddingLeft="@dimen/padding_small_15"
        android:paddingRight="@dimen/padding_small_15"
        android:paddingTop="@dimen/padding_llsmall_5"
        android:text="@string/mystr5"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_small_14" />
</LinearLayout>