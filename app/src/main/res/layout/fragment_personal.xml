<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f8f8f8"
                tools:context="com.future.association.personal.ui.fragment.PersonalFragment">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:id="@+id/linearMy1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small_15">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.future.association.personal.CircleImageView
                android:id="@+id/cirimgMy"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/head_bg_shape"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_birds"/>

            <TextView
                android:id="@+id/tvMylevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cirimgMy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                android:background="@color/white"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="LV3"
                android:textColor="@color/basic_color"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvMyJifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small_14"
            tools:text="3056"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMyShenFen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal_16"
                    tools:text="身份认证"/>

                <TextView
                    android:id="@+id/tvMychenghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    tools:text="高级督察"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvMyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_lsmall_10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small_14"
                tools:text="所属区域"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearMy2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearMy1"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_lsmall_10"
            android:paddingTop="@dimen/padding_lsmall_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/text_size_big_18"
                tools:text="v1"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="等级"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/text_size_normal_16"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_lsmall_10"
            android:paddingTop="@dimen/padding_lsmall_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/text_size_big_18"
                tools:text="高级督察"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="称号"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/text_size_normal_16"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_lsmall_10"
            android:paddingTop="@dimen/padding_lsmall_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/text_size_big_18"
                tools:text="3056"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="积分"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/text_size_normal_16"/>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearMy2"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
