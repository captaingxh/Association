                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_05"
                android:background="@color/color_dcdcdc"/>

            <RelativeLayout
                android:id="@+id/myWenJuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small_15"
                android:layout_marginTop="@dimen/margin_small_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我的问卷"
                    android:drawableLeft="@drawable/wnjuan"
                    android:drawablePadding="@dimen/my_ic_padding"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_normal_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_05"
                android:background="@color/color_dcdcdc"/>

            <RelativeLayout
                android:id="@+id/myXiaoXi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small_15"
                android:layout_marginTop="@dimen/margin_small_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我的消息"
                    android:drawableLeft="@drawable/xiaoxi_69"
                    android:drawablePadding="@dimen/my_ic_padding"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_normal_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_line_05"
                android:background="@color/color_dcdcdc"/>

            <RelativeLayout
                android:id="@+id/myTongZhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small_15"
                android:layout_marginTop="@dimen/margin_small_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我的通知"
                    android:drawableLeft="@drawable/tongzhi"
                    android:drawablePadding="@dimen/my_ic_padding"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_normal_16"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>

