<?xml version="1.0" encoding="utf-8"?>

    <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f8f8f8"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="com.future.association.login.LoginActivity">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:scaleType="fitXY"
            android:src="@drawable/qidongye"/>



        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <Button
                android:id="@+id/login_commit"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:background="@drawable/login_commit_selector"
                android:layout_centerHorizontal="true"
                android:text="用户登录"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/guest_login"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:background="@drawable/guest_login_commit_selector"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/login_commit"
                android:text="游客登录"
                android:layout_marginTop="8dp"
                android:textColor="@color/basic_text_gray"
                android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/guest_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册"
                android:textColor="@color/gallery_text_gray"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/login_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:layout_marginStart="12dp"
                android:textColor="@color/gallery_text_gray"
                android:textSize="12sp" />
        </LinearLayout>
            <TextView
                android:id="@+id/zcxy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>
