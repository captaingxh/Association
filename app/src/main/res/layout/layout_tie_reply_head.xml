<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="tieDetailInfo"
            type="com.future.association.community.model.TieDetailInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@{tieDetailInfo.title}"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/yanjing"
                    android:drawablePadding="2dp"
                    android:textSize="12sp"
                    android:text="@{tieDetailInfo.click_num}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/pinlun"
                    android:layout_marginStart="4dp"
                    android:textSize="12sp"
                    android:drawablePadding="2dp"
                    android:text="@{tieDetailInfo.huifu_num}"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:text="生活小事"/>
            </LinearLayout>
            <View
                style="@style/appGreyLine"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="20px">

            <RelativeLayout
                android:id="@+id/rl_base_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.future.association.community.custom.CircleImageView
                    android:id="@+id/civ_head"
                    android:layout_width="90px"
                    android:layout_height="90px" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="10px"
                    android:layout_toRightOf="@id/civ_head"
                    android:text="@{tieDetailInfo.real_name}"
                    android:textColor="#333333"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10px"
                    android:background="@drawable/shape_lanlord"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:text="楼主"
                    android:textColor="#faa701"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="10px"
                    android:layout_toRightOf="@id/civ_head"
                    android:text="@{tieDetailInfo.level}"
                    android:textColor="#666666"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="10px"
                    android:layout_toRightOf="@id/tv_class"
                    android:text="@{tieDetailInfo.address}"
                    android:textColor="#666666"
                    android:textSize="24px" />
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:visibility="invisible"
                style="@style/appGreyLine"
                android:layout_below="@id/rl_base_info"
                android:layout_marginTop="10px" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginTop="30px"
                android:lineSpacingExtra="20px"
                android:text="@{tieDetailInfo.title}"
                android:textColor="#333333"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="20px"
                android:text="@{tieDetailInfo.create_time}"
                android:textColor="#999999"
                android:textSize="24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="20px"
                android:text="@{tieDetailInfo.typeFormat()}"
                android:textColor="#999999"
                android:textSize="24px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_date"
                android:layout_marginTop="34px"
                android:lineSpacingExtra="20px"
                android:text="@{tieDetailInfo.content}"
                android:textColor="#666666"
                android:textSize="28px" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="#f8f8f8" />
    </LinearLayout>

</layout>