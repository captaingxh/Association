<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_small_15">

    <TextView
        android:id="@+id/tvMyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myHY1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_normal_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_lsmall_10">

        <TextView
            android:id="@+id/tvMyHYBelong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/myHY2"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_lsmall_12" />

        <TextView
            android:id="@+id/tvMyHYHuifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_small_15"
            android:layout_toRightOf="@id/tvMyHYBelong"
            android:text="@string/myHY4"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_lsmall_12" />

        <TextView
            android:id="@+id/tvMyHYTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/myHY3"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_lsmall_12" />

    </RelativeLayout>
</LinearLayout>