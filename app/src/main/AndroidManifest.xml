<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.future.association">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".common.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="design_width"
            android:value="750" />

        <meta-data
            android:name="design_height"
            android:value="1334" />

        <activity android:name=".common.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.LoginActivity"></activity>
        <!--社区模块-->
        <activity android:name=".community.view.NotifyDetailActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:screenOrientation="portrait"/>
        <activity android:name=".community.view.BannerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".community.view.SendTieActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".community.view.TieDetailActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" android:screenOrientation="portrait"/>
        <activity android:name=".community.view.WeiGuiActivity"
            android:screenOrientation="portrait"/>
        <!--社区模块-->
        <activity android:name=".login.FindPwdVerifyActivity" />
        <activity android:name=".login.FindPwdResetActivity" />
        <activity android:name=".login.RegisterActivity" />
        <activity android:name=".login.PerfectInformationActivity" />
        <activity android:name=".login.RegisterSuccessActivity" />
        <activity android:name=".questionnaire.QuestionnaireWebActivity"/>
    </application>

</manifest>